<Window x:Name="vectorMainWindow" x:Class="VectorTD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VectorTD"
        mc:Ignorable="d"
        Title="Vector TD" Height="930" Width="1005" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid x:Name="mainGrid" Width="1000" Height="900">
        <Canvas x:Name="gameCanvas" Width="900" Height="900" HorizontalAlignment="Right" Background="Black" MouseLeftButtonUp="gameCanvas_MouseLeftButtonUp"></Canvas>
        <Canvas x:Name="unitPanel" Background="Green" HorizontalAlignment="Left" Width="100" Height="900">
            <Button x:Name="btnAddTurret" Content="Add turret" Canvas.Top="10" Width="100" Click="btnAddTurret_Click" Background="Red"/>
            <Button x:Name="btnStartEnemies" Content="Start wave" Canvas.Top="870" Width="100" Background="Red" Click="btnStartEnemies_Click"/>
            <TextBox x:Name="testBox" Height="23" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="713" Width="63"/>
            <Button x:Name="btnRemoveTurret" Content="Remove Turret" Canvas.Top="59" Width="100" Click="btnRemoveTurret_Click"/>
        </Canvas>
    </Grid>
</Window>
